# ===============================
# DEPLOYMENT (Runtime) VARIABLES
# ===============================
# These variables are used when the container is deployed (runtime).

# InvoicePlane Application Settings
IP_PORT=9055
IP_URL=http://YOUR-IP-HERE
TZ=Australia/Sydney
REMOVE_INDEXPHP=true
SETUP_COMPLETED=false

# Database (MariaDB) Settings
MARIADB_VERSION=10.6
MYSQL_HOST=mariadb
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=super-secure-root-password
MYSQL_DATABASE=invoiceplane
MYSQL_USER=invoiceplane
MYSQL_PASSWORD=invoiceplane1234


# PHP and Session Settings (Runtime)
ENABLE_DEBUG=false
SESS_EXPIRATION=7200
SESS_MATCH_IP=0

# Security Settings
ENABLE_INVOICE_DELETION=false
DISABLE_READ_ONLY=false

# Encryption key should only be populated after setup is completed. Get this key from ipconfig.conf
ENCRYPTION_CIPHER=AES-256-CBC
ENCRYPTION_KEY=

# ============================================
# DOCKER BUILD & GHCR (Build-Time) VARIABLES
# ============================================
PHP_VERSION=8.4
ALPINE_VERSION=latest
IP_SOURCE=https://github.com/InvoicePlane/InvoicePlane/releases/download
IP_VERSION=v1.6.2
IP_LANGUAGE=english
IP_IMAGE=mrcee/invoiceplane-dockerx

# ============================================
# Dynamic User & Host OS Settings
# ============================================
PUID=911
PGID=911
HOST_OS=linux

# --------------------------------------------
# MariaDB Directory Ownership (Auto-Managed)
# --------------------------------------------
# For the MariaDB bind mount (/var/lib/mysql), the official MariaDB container expects ownership by the mysql user.
# On many images, this is UID 999 and GID 999. These values are auto-set on the host by kickstart.sh.
MYSQL_UID=999
MYSQL_GID=999
